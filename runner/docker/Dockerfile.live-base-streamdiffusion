ARG BASE_IMAGE=livepeer/ai-runner:live-base
FROM ${BASE_IMAGE}

# Install Miniconda and create the 'comfystream' environment
ARG PYTHON_VERSION=3.11
ENV CONDA_DIR="/workspace/miniconda3"
ENV PATH="$CONDA_DIR/bin:$PATH" \
    PIP_PREFER_BINARY=1

RUN apt update && apt install -yqq --no-install-recommends wget curl ca-certificates && \
    wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-py310_23.11.0-2-Linux-x86_64.sh -O ~/miniconda.sh && \
    /bin/bash ~/miniconda.sh -b -p $CONDA_DIR && \
    rm ~/miniconda.sh && \
    conda init bash && \
    conda config --set auto_activate_base false && \
    conda clean -a -y && \
    conda create -n comfystream python=$PYTHON_VERSION -y && \
    conda run -n comfystream pip install --no-cache-dir --upgrade pip==23.3.2 setuptools==69.5.1 wheel==0.43.0 && \
    conda clean -a -y && \
    apt purge -y --auto-remove wget curl && \
    apt clean && rm -rf /var/lib/apt/lists/*

# Install StreamDiffusion dependencies into the comfystream environment
RUN conda run -n comfystream pip install --no-cache-dir --force-reinstall \
    torch==2.7.1+cu128 \
    torchvision==0.22.1+cu128 \
    torchaudio==2.7.1+cu128 \
    --index-url https://download.pytorch.org/whl/cu128 && \
    conda run -n comfystream pip install --no-cache-dir \
    xformers==0.0.30 --no-deps

# Install core dependencies with working versions first
RUN conda run -n comfystream pip install --no-cache-dir \
    diffusers==0.32.2 \
    accelerate==1.7.0 \
    transformers==4.52.0 \
    peft==0.15.2 \
    onnx==1.18.0 \
    onnxruntime==1.22.0

# Install CUDA Python bindings and TensorRT dependencies
# TODO: update install-tensorrt script in streamdiffusion and use it instead of this
RUN conda run -n comfystream pip install --no-cache-dir --upgrade --root-user-action=ignore \
    cuda-python==12.9.0 \
    cuda-bindings==12.9.1 \
    cuda-pathfinder==1.1.0 \
    tensorrt==10.9.0.34 \
    tensorrt-cu12-bindings==10.9.0.34 \
    tensorrt-cu12-libs==10.9.0.34 \
    polygraphy==0.49.20 \
    onnx-graphsurgeon==0.5.8 \
    controlnet-aux==0.0.10 \
    mediapipe==0.10.21

# Install StreamDiffusion lib into the comfystream environment
ARG STREAMDIFFUSION_VERSION=b08c265f94453ba19459040a401eba76b2402015
RUN conda run -n comfystream pip install git+https://github.com/livepeer/StreamDiffusion.git@${STREAMDIFFUSION_VERSION}#egg=streamdiffusion[tensorrt]

# Force reinstall correct versions in case StreamDiffusion upgraded them
RUN conda run -n comfystream pip install --no-cache-dir --force-reinstall \
    tensorrt==10.9.0.34 \
    diffusers==0.32.2 \
    accelerate==1.7.0 \
    transformers==4.52.0 \
    peft==0.15.2 \
    onnxruntime==1.22.0

WORKDIR /app

# Disable HF hub connectivity to avoid internet access during runtime.
# This is manually disabled on the script to download models (dl_checkpoints.sh)
ENV HF_HUB_OFFLINE=1

# Create symlink for where StreamDiffusion builds TensorRT engines at runtime
RUN ln -s /models/StreamDiffusion--engines ./engines
